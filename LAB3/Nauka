abstract class Shape
{
    public abstract double Area();
}

class Circle : Shape
{
    public double Radius {get; set;}

    public Circle(double radius)
    {
        this.Radius = radius;
    }

    public override double Area()
    {
        return Math.PI * Radius * Radius;
    }
}



interface IMoveable
{
    void Move();
}

class Car : IMoveable
{
    public void Move()
    {
        Console.WriteLine("The car is driving.");
    }
}